<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="450dp"
        android:foregroundGravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="19dp"
            android:text=""
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_9"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:text="9"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_7"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="7"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent" />



    <Button
        android:id="@+id/btn_erase_all"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="C"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_multiply"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_multiply"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="312dp"
        android:layout_marginLeft="312dp"
        android:text="X"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_8"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:text="8"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_4"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="4"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_5"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:text="5"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_6"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:text="6"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_subtract"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="312dp"
        android:layout_marginLeft="312dp"
        android:text="-"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_1"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_2"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:text="2"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_3"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:text="3"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_add"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="312dp"
        android:layout_marginLeft="312dp"
        android:text="+"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_0"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_point"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:layout_marginBottom="16dp"
        android:text="."
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_result"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="312dp"
        android:layout_marginLeft="312dp"
        android:layout_marginBottom="16dp"
        android:text="="
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backgroundTint="#5060BA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_00"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginBottom="16dp"
        android:text="00"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="()"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_8"
        app:layout_constraintStart_toEndOf="@+id/btn_erase_all" />

    <Button
        android:id="@+id/btn_erase"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:icon="@drawable/ic_baseline_backspace_24"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="38sp"
        app:iconTint="#5060BA"
        app:layout_constraintBottom_toTopOf="@+id/btn_9"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/btn_divide"
        android:onClick="onClick"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="/"
        android:textColor="#000000"
        android:textSize="30sp"
        app:backgroundTint="#E6E6E6"
        app:layout_constraintBottom_toTopOf="@+id/btn_multiply"
        app:layout_constraintStart_toEndOf="@+id/btn_erase" />

</androidx.constraintlayout.widget.ConstraintLayout>